<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir">
	<id value="connectathon-15-patient-base-client-id-json"/>

	<url value="http://wildfhir.aegis.net/fhir3-0-0/TestScript/connectathon-15-patient-base-client-id-json"/>
	<name value="FHIR Connectathon 15 - Patient - JSON - Client Assigned Resource Id"/>
	<status value="active"/>
	<date value="2017-03-13"/>
	<publisher value="AEGIS.net, Inc."/>
	<contact>
		<name value="Touchstone Support"/>
		<telecom>
			<system value="email"/>
			<value value="Touchstone_Support@aegis.net"/>
			<use value="work"/>
		</telecom>
	</contact>
	<description value="Baseline tests using the JSON format to create, update, retrieve history and search a patient without extensions where the client assigns the resource id. The destination server must support conditional create."/>
